<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app version="3.1"><!-- версія специфікацїї Servlet для Tomcat 8.5-->
<!--<web-app version="5.0">&lt;!&ndash; версія специфікацїї Servlet для Tomcat 10.0&ndash;&gt;-->
  <display-name>Spring Test dz5</display-name>

  <servlet>
    <servlet-name>my1Dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/appContextMVC.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>my1Dispatcher</servlet-name>
    <url-pattern>/dz5/*</url-pattern>
<!--    <url-pattern>/</url-pattern>-->
  </servlet-mapping>

</web-app>
